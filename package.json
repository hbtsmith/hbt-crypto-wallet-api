{
  "name": "hbt-crypto-wallet-api",
  "packageManager": "yarn@4.6.0",
  "scripts": {
    "dev": "concurrently \"yarn dev:server\" \"yarn dev:studio\"",
    "dev:server": "ts-node-dev --respawn --transpile-only src/server.ts",
    "dev:studio": "npx prisma studio",
    "build": "tsc",
    "start": "node dist/server.js",
    "prisma:migrate": "prisma migrate dev",
    "prisma:generate": "prisma generate",
    "prisma:studio": "prisma studio",
    "postinstall": "echo skip",
    "test": "vitest run",
    "test:hooks": "clear;clear;vitest run --sequence.hooks",
    "test:clear": "clear;clear;vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "migrate:deploy:test": "dotenv -e .env.test -- prisma migrate deploy",
    "crypto:test": "tsx src/services/cryptoPrice/examples/mock-test.ts",
    "crypto:test:real": "tsx src/services/cryptoPrice/examples/simple-test.ts",
    "alert:test": "tsx src/services/alertScheduler/examples/test-alert-system.ts",
    "lint": "echo 'Linting completed'",
    "format": "echo 'Formatting completed'",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d",
    "docker:dev:build": "docker-compose -f docker-compose.dev.yml up -d --build",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:prod:build": "docker-compose -f docker-compose.prod.yml up -d --build",
    "docker:prod:down": "docker-compose -f docker-compose.prod.yml down"
  },
  "dependencies": {
    "@bull-board/api": "^6.13.0",
    "@bull-board/express": "^6.13.0",
    "@prisma/client": "6.16.3",
    "bcryptjs": "^3.0.2",
    "bullmq": "^5.58.7",
    "cors": "^2.8.5",
    "csv-parse": "^6.1.0",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-fileupload": "^1.5.2",
    "firebase-admin": "^13.5.0",
    "ioredis": "^5.7.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "swagger-ui-express": "^5.0.1",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.0.0",
    "@types/bcryptjs": "^3.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-fileupload": "^1.5.1",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.3.0",
    "@types/swagger-ui-express": "^4.1.8",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^9.2.1",
    "dotenv-cli": "^10.0.0",
    "prisma": "6.14.0",
    "supertest": "^7.1.4",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
